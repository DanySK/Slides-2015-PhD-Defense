\mode<presentation>

%from beaver
\definecolor{bluegray}{rgb}{0.50,0.50,0.60}
\definecolor{bluegreen}{rgb}{0.10,0.30,0.60}
\definecolor{darkbluegreen}{rgb}{0.05,0.15,0.30}
\definecolor{saperebrown}{RGB}{90,74,59}% #5a4a3b
\definecolor{darksaperebrown}{RGB}{30,28,20}% #5a4a3b

\setbeamercolor{section in toc}{fg=black,bg=white}
\setbeamercolor{normal text}{fg=saperebrown!100!black}
\setbeamercolor{alerted text}{fg=darkbluegreen!80!gray}
\setbeamercolor{example text}{fg=darksaperebrown!80!gray}
\setbeamercolor*{palette primary}{fg=bluegreen!60!black,bg=bluegray!30!white}
\setbeamercolor*{palette secondary}{fg=bluegreen!70!black,bg=bluegray!15!white}
\setbeamercolor*{palette tertiary}{bg=bluegreen!80!black,fg=bluegray!10!white}
\setbeamercolor*{palette quaternary}{fg=bluegreen,bg=bluegray!5!white}

\setbeamercolor*{sidebar}{fg=bluegreen,bg=bluegray!15!white}

\setbeamercolor*{palette sidebar primary}{fg=bluegreen!10!black}
\setbeamercolor*{palette sidebar secondary}{fg=white}
\setbeamercolor*{palette sidebar tertiary}{fg=bluegreen!50!black}
\setbeamercolor*{palette sidebar quaternary}{fg=gray!10!white}

%\setbeamercolor*{titlelike}{parent=palette primary}
\setbeamercolor{titlelike}{parent=palette primary,fg=saperebrown}
\setbeamercolor{frametitle}{bg=bluegray!10!white}
\setbeamercolor{frametitle right}{bg=bluegray!60!white}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

%from orchid
\setbeamercolor{block title}{use=structure,fg=white,bg=bluegreen!75!black}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=bluegreen!75!black}
\setbeamercolor{block title example}{use=example text,fg=white,bg=bluegreen!75!black}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!10!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!10!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!10!bg}

\mode
<all>
